<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimens_160"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_border"
        android:orientation="vertical"
        android:padding="@dimen/dimens_1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_product_grid"
            style="@style/product_image_gridstyle"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_3"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/low_cat_prod_name_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/product_dummy_name"
                android:textColor="@color/colorTextGreyDark"
                android:textSize="@dimen/dimens_12sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_pro_brand_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_title_name"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/dimens_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tx_pro_price_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimens_2"
                    android:text="@string/product_price"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="@dimen/dimens_11sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimens_2"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="@dimen/dimens_11sp"
                    tools:text="@string/tx_mo_of_items" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tx_pro_selling_price_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimens_2"
                android:text="@string/product_price"
                android:textSize="@dimen/dimens_12sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>