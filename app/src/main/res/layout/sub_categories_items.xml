<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sub_category_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dimens_8"
            android:layout_marginEnd="@dimen/dimens_8">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/hot_category_child_image"
                android:layout_width="@dimen/dimens_30"
                android:layout_height="@dimen/dimens_30"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/dummy_featured" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_sub_drop_down"
                android:layout_width="@dimen/dimens_13"
                android:layout_height="@dimen/dimens_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimens_5"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_down_arrow" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_hot_category_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimens_5"
                android:layout_marginRight="@dimen/dimens_5"
                android:layout_toLeftOf="@id/img_sub_drop_down"
                android:layout_toRightOf="@id/hot_category_child_image"
                android:maxLines="2"
                android:text="@string/lorem_long_text" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dimens_35"
                android:layout_height="@dimen/dimens_35"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sub_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_5"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
