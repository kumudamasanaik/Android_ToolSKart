<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_5"
    android:orientation="vertical"
    android:padding="@dimen/dimens_8">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/im_reviewers_image"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginEnd="@dimen/dimens_15"
        app:srcCompat="@drawable/ic_dummy_user_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/im_reviewers_image"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/naming_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cadidate_name"
                android:textSize="@dimen/dimens_13sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/dummy_date"
                android:textSize="@dimen/dimens_13sp" />

        </LinearLayout>

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/no_of_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            app:srb_borderColor="@color/colorGoldenYellow"
            app:srb_fillColor="@color/colorGoldenYellow"
            app:srb_numberOfStars="5"
            app:srb_rating="4"
            app:srb_starBorderWidth="1"
            app:srb_starSize="@dimen/dimens_10" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:text="@string/verification_text"
            android:textColor="@color/colorLightRed"
            android:textSize="@dimen/dimens_12sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:text="@string/dummy_explanation"
            android:textSize="@dimen/dimens_12sp" />

    </LinearLayout>


</RelativeLayout>