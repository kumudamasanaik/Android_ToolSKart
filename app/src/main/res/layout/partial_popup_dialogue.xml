<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="@dimen/dimens_2"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/dimens_5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_10"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/dimens_5"
            android:gravity="center"
            android:text="@string/do_u_want_to_logout"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimens_14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_marginBottom="@dimen/dimens_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                style="@style/buttons"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_30"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_10"
                android:layout_weight="1"
                android:background="@drawable/pin_background"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/tx_cancel"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btn_ok"
                style="@style/buttons"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_30"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_10"
                android:background="@drawable/pin_background"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/tx_ok"
                android:textColor="@color/colorBlack" />


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>