<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_heb"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/dimens_15sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_category"
            android:textColor="@color/colorDarkTextGrey"
            android:textSize="@dimen/dimens_10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_price"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/dimens_15sp" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dimens_12"
            android:layout_height="@dimen/dimens_12"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimens_10"
            app:srcCompat="@drawable/ic_right_arrow" />
    </LinearLayout>
</LinearLayout>